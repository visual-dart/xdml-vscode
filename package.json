{
  "name": "xdml-vscode",
  "displayName": "XAML for Dart Language Support",
  "description": "",
  "version": "0.0.1",
  "publisher": "bigmogician",
  "repository": {
    "type": "git",
    "url": "https://github.com/visual-dart/xdml-vscode.git"
  },
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:xdml"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xdml",
        "aliases": [
          "Xaml For Dart",
          "XDML",
          "xdml"
        ],
        "extensions": [
          ".dart.xaml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "xdml",
        "scopeName": "text.dart.xaml",
        "path": "./syntaxes/xdml.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Xaml For Dart Language Support Configuration",
      "properties": {
        "xdml.validation": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": ""
        },
        "xdml.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "cd client && yarn && cd ../server && yarn && cd ..",
    "vscode:prepublish": "cd client && yarn update-vscode && cd .. && yarn compile",
    "compile:syntax": "npx js-yaml syntaxes/xdml.tmLanguage.yaml > syntaxes/xdml.tmLanguage.json",
    "compile:config": "npx js-yaml language-configuration.yaml > language-configuration.json",
    "compile:language-support": "yarn compile:syntax && yarn compile:config",
    "compile:source": "tsc -b",
    "watch:source": "tsc -b -w",
    "compile": "yarn compile:language-support && yarn compile:source",
    "watch": "yarn compile:language-support && yarn watch:source",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.0.0",
    "tslint": "^5.16.0",
    "typescript": "^3.5.1",
    "js-yaml": "^3.13.1"
  }
}
